# OrchePlan Backend Development Configuration
# Copy this file to .env.local for local development

# Database Configuration
DATABASE_URL=postgresql://coder:coder@localhost:5432/orcheplan_dev
SHADOW_DATABASE_URL=postgresql://coder:coder@localhost:5432/orcheplan_shadow
JWT_SECRET=dev-secret-key

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS Configuration
# Local development origins
FRONTEND_ORIGINS=http://localhost:3000,http://localhost:9002,http://127.0.0.1:3000

# Cookie Configuration (development)
# Don't set AUTH_COOKIE_DOMAIN for localhost development
# AUTH_COOKIE_DOMAIN=   # Leave empty for localhost
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax

# Logging Configuration
LOG_LEVEL=debug
LOG_CONSOLE=true
LOG_FILE=false

# Development Features
ENABLE_DEBUG_ROUTES=true
DISABLE_RATE_LIMITING=true