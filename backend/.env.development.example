# OrchePlan Backend Development Configuration
# Copy this file to .env.local for local development

# Database Configuration
DATABASE_URL=postgresql://coder:coder@localhost:5432/orcheplan_dev
SHADOW_DATABASE_URL=postgresql://coder:coder@localhost:5432/orcheplan_shadow
JWT_SECRET=dev-secret-key

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS Configuration
# Local development origins
FRONTEND_ORIGINS=http://localhost:3001,http://localhost:9002,http://127.0.0.1:3001
# Disable auth rate limits in development to avoid lockouts during tests
# Set to 'true' to disable the authLimiter middleware
DISABLE_AUTH_RATE_LIMITS=false

# Cookie Configuration (development)
# Don't set AUTH_COOKIE_DOMAIN for localhost development
# AUTH_COOKIE_DOMAIN=   # Leave empty for localhost
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax

# Logging Configuration
# Available levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=debug
LOG_CONSOLE=true
LOG_FILE=true
LOG_DIR=./logs
LOG_MAX_SIZE=50m
LOG_MAX_FILES=3
LOG_DATE_PATTERN=YYYY-MM-DD
LOG_FORMAT=simple

# Development Features
ENABLE_DEBUG_ROUTES=true
DISABLE_RATE_LIMITING=true