{
  "name": "orcheplan-backend",
  "version": "1.0.0",
  "description": "A local application using Firestore emulator",
  "main": "src/server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/server.ts",
    "start-local": "bash scripts/start-local.sh",
    "start:prod": "NODE_ENV=production npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "jest role-hierarchy-security.test.ts",
    "test:security-manual": "ts-node tests/manual-security-test.ts",
    "test:security-simple": "ts-node tests/simple-security-test.ts",
    "test:security-debug": "ts-node tests/debug-security-test.ts",
    "test:security-rate-limited": "ts-node tests/rate-limited-security-test.ts",
    "test:security-env": "NODE_ENV=test ts-node tests/rate-limited-security-test.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "smoke-test": "bash scripts/smoke-test.sh",
    "create-superuser": "ts-node scripts/create_superuser.ts",
    "check-users": "ts-node scripts/check_users.ts",
    "test-lockout": "ts-node scripts/test_account_lockout.ts",
    "cleanup-lockouts": "ts-node scripts/cleanup_lockouts.ts",
    "db:backup": "bash scripts/backup-database.sh",
    "db:restore": "bash scripts/restore-database.sh",
    "logs": "tail -f /var/log/orcheplan/app.log"
  },
  "dependencies": {
    "@dr.pogodin/csurf": "^1.16.6",
    "@prisma/client": "^6.17.1",
    "@types/csurf": "^1.11.5",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.0"
  },
  "prisma": {
    "version": "6.17.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.17",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.17.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.4.0",
    "typescript": "^5.2.2"
  },
  "license": "MIT"
}
