# OrchePlan Backend Production Configuration
# Copy this file to .env.production and update with your values

NODE_ENV=production

# Database Configuration
# Update with your production database URL
DATABASE_URL=postgresql://orcheplan_user:CHANGE_THIS_PASSWORD@localhost:5432/orcheplan_db?sslmode=require
DIRECT_URL=postgresql://orcheplan_user:CHANGE_THIS_PASSWORD@localhost:5432/orcheplan_db?sslmode=require

# Security Configuration
# Generate a strong random secret (at least 32 characters)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARS_LONG

# CORS Configuration
# Add your production frontend URLs (comma-separated)
FRONTEND_ORIGINS=https://orcheplan.com,https://www.orcheplan.com

# Cookie Security
# Use dot prefix to share cookies between main domain and API subdomain
AUTH_COOKIE_SECURE=true
AUTH_COOKIE_DOMAIN=.orcheplan.com
AUTH_COOKIE_SAMESITE=none

# Logging Configuration
# Available levels: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=warn
LOG_CONSOLE=false
LOG_FILE=true
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD-HH
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Server Configuration
PORT=3000
HOST=0.0.0.0

# SSL Configuration (if using client certificates)
# SSL_CERT_PATH=/etc/ssl/certs/client-cert.pem
# SSL_KEY_PATH=/etc/ssl/private/client-key.pem
# SSL_CA_PATH=/etc/ssl/certs/ca-cert.pem

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/var/backups/orcheplan

# Email Configuration (for notifications)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASS=your_email_password