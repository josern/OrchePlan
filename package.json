{
  "name": "orcheplan-monorepo",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run start-local",
    "dev": "npx concurrently -k \"npm:dev:frontend\" \"npm:dev:backend\"",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start:prod": "npm run start:backend & npm run start:frontend",
    "start:backend": "cd backend && npm run start",
    "start:frontend": "cd frontend && npm run start",
    "deploy": "bash scripts/deploy-production.sh",
  "health-check": "curl -f http://localhost:3001/health && curl -f http://localhost:3001/api/health"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  }
}
